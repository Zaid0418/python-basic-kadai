   "source": [
    "# 台形の寸法（cm）\n",
    "\n",
    "upper = 10  # 上辺\n",
    "lower = 20  # 下辺\n",
    "height = 5  # 高さ\n",
    "\n",
    "# 台形の面積を計算（㎠）\n",
    "\n",
    "area_cm2 = (upper + lower) * height / 2\n",
    "\n",
    "print(f\"台形の面積は{area_cm2}㎠です。\")\n"
   ]
  }
